{
  "name": "hershel-theodore-layton/portable-hack-ast",
  "description": "Query the Hack AST in a light and portable manner.",
  "license": "MIT",
  "require": {
    "hhvm": ">=4.102",
    "hershel-theodore-layton/hhvm-four-shim": "<1"
  },
  "require-dev": {
    "hershel-theodore-layton/test-chain": "<1"
  },
  "scripts": {
    "post-install-cmd": [
      ".github/workflows/prepare-environment.sh"
    ],
    "post-update-cmd": [
      ".github/workflows/prepare-environment.sh"
    ]
  },
  "config": {
    "allow-plugins": {
      "hhvm/hhvm-autoload": true
    }
  }
}
